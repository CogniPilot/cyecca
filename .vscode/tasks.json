{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Poetry Install",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "poetry install",
      "problemMatcher": [],
      "presentation": { "reveal": "silent", "close": false }
    },
    {
      "label": "Detect ROS Python path",
      "type": "shell",
      "command": "bash .vscode/detect_ros_path.sh",
      "problemMatcher": [],
      "presentation": { "reveal": "silent", "close": false }
    },
    {
      "label": "Register Jupyter Kernel (Poetry)",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "poetry run python -m ipykernel install --user --name=cyecca --display-name \"Python (cyecca)\"",
      "problemMatcher": [],
      "presentation": { "reveal": "silent", "close": false }
    },
    {
      "label": "Setup Poetry Environment",
      "dependsOn": [
        "Poetry Install",
        "Detect ROS Python path",
        "Register Jupyter Kernel (Poetry)"
      ],
      "dependsOrder": "sequence",
      "runOptions": { "runOn": "folderOpen" },
      "presentation": { "reveal": "never", "close": false }
    }
  ]
}
